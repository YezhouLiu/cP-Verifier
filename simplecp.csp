//simplecp
var b;
var c;
var a;
var d;
var state = 1;

S0() = cp_init{
b = 0;
c = 0;
a = 10;
d = 0;
}-> S1();
S1() = r1{
if (state == 1 && a > 0){
a = a - 2;
b = b + 1;
}
}-> S1();
S2() = r2{
if (state == 1 && b > 0){
b = b - 2;
c = c + 1;
d = d + 2;
}
}-> S1();
#assert S0() nonterminating;
#assert S0() deadlockfree;
#assert S0() divergencefree;
#assert S0() deterministic;

